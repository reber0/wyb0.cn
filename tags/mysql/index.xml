 try:
 yield cursor #这里就是with返回的
 finally:
 dbconn.commit()
 cursor.close()
 dbconn.close()

 def query(self, sql, arg=&amp;#39;&amp;#39;):
 try:
 with self.init() as cursor:
 if arg:

 cursor.execute(sql,arg) #返回受影响行数
